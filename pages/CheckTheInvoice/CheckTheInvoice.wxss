/* pages/CheckTheInvoice/CheckTheInvoice.wxss */
page{
  flex: 1;
}
.CheckTheInvoicebg{
  width: 100%;
  height: 240px;
  background: #349BFF;
  border: 1px solid #ffffff
 }
 .content{
   width: 80%;
   height: 100%;
   margin:40px auto;
   background-color: #ffffff;
   box-shadow: 0 8px 10px 2px rgba(188,209,233,0.50);
    border-radius: 4px;
    display: flex;
    flex-direction: column;
   
 }
  .content .title{
    flex: 1;
    text-align: center;
   height: 50px;
    line-height: 50px;
   font-family: PingFangSC-Medium;
    font-size: 18px;
    color: #2A2140;
    letter-spacing: -0.43px;
 }
  .content .content-list{
    width: 100%;
    height: 80%;
    display: flex;
    flex-direction: column
  }
   .content .content-list>view{
      margin-left: 20px;
   }
     .content .content-list>view .name{
       height: 30px;
       line-height: 30px;
      width: 90px;
      display: inline-block;
     }

.btns{
  margin-top: 50px;
  display: flex;
  justify-content: center;
}
.btns button{
  display: inline-block;
  padding:0 30px;
  border-radius: 10px;
  color: #349BFF;
  background-color: #fff;
  border:1px solid  #349BFF;
}
.btnactive{
   background: #349BFF!important;
   color: #fff!important
}
.dialoge{
   position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  margin:auto;
  background-color:rgba(0, 0, 0, 0.3)
}
.dialoge-content{
  z-index: 999;
  opacity: 1;
  width: 80%;
  height: 200px;
  margin:200px auto;
  border-radius: 10px;
  display: flex;
  flex-direction: column;
  background-color: #fff;
}
.dialoge-content .dialoge-dia{
  flex: 1;
 
}
.dialoge-content .dialoge-btns{
    display: flex;
}
.dialoge-content .dialoge-btns button{
  flex: 1;
    background: #349BFF!important;
   color: #fff!important
}
.dialoge-dia b{
  width: 100%;
  display: block;
  text-align: center;
  height: 40px;
  line-height: 40px;
  margin-top: 30px;
}
.dialoge-ipt{
  border: 1px solid #ccc;
  width: 80%;
  margin-left: 50%;
  transform: translateX(-50%)
}
.hide{
  display: none
}
.show{
  display: block
}