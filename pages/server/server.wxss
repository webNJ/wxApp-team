/* pages/server/server.wxss */
page{
  flex: 1;
  background:#349BFF;
}
.server{
  width: 100%;
  margin: 0 auto;
}
.swiper{
  height: 200px;
  width: 100%;
}
.swiper image{
  height: 100%;
  width: 100%;
}
.middle{
  width: 288px;
  background: #fff;
  margin: 20px auto;
}
.text{
  font-size: 20px;
  font-weight: bold;
  width: 100%;
  height: 50px;
  text-align: center;
  line-height: 50px;
  margin: 0 auto; 
  display: block;
}
.nav{
  width: 85%;
  height: 200px;
  padding:10px 10px;
  border-radius: 10px;
  display: flex;
  flex-wrap: wrap;
  background: #fff;
  margin: 20px auto;
  margin-bottom: 20px;
}
.nav dl{
  display: flex;
  flex-direction: column;
  width: 25%;
  line-height: 20px;

}
.middle dl image{
  width: 50px;
  height: 50px;
  justify-content: center;
  align-items: center;
  
}
.middle dd{
  font-size: 12px;
  color: #ddd;
  display: flex;
  justify-content: center;
  align-items: center;
}
.bottom{
  width: 100%;
  height: 50px;
  line-height: 50px;
  bottom: 0;
  position: absolute;
  background: #fff;
}
.bottom{
  width: 100%;
  height: 50px;
  line-height: 50px;
  background: #fff;
  bottom: 0;
  position: fixed;
  display: flex;
}
.bottom text{
  width: 33.33%;
  line-height: 50px;
  height: 50px;
  text-align: center;
}
