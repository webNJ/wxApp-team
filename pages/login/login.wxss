page{
  flex: 1;
  background: #349BFF;
}
.loginbox{
  width: 100%;
  height: 100%;
}
.wrap{
    width: 300px;
    height: 350px;
    background: #fff;
    border-radius: 10px;
   margin-left: 50%;
   transform: translateX(-50%)
}
.wrap image{
  width: 220px;
  height: 70px;
  margin-left: 40px;
  margin-top: 20px;
}
.wrap input{
  width: 240px;
  height: 30px;
  border-radius: 20px;
  border: 1px solid #ddd;
  margin-top: 15px;
  margin-left: 10px;
  padding-left: 30px;
  position: relative;
} 
.wrap span{
  position: absolute;
  font-size: 12px;
  color: skyblue;
  right: 5px;
  top: 6px;
}
.wrap button{
  width: 270px;
  height: 30px;
  line-height: 30px;
  background: #349BFF;
  color: #fff;
  margin-top: 30px;
  border-radius: 20px
}
.wrap picker{
  margin-top: 15px;
  margin-left: 18px;
  font-size: 14px;
  color: #ccc;
}
.wrap picker text{
  color: skyblue;
}