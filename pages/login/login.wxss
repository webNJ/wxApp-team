body,html{
  width:100%;
  height: 100%;
  background: #349BFF;
}
.container{
  width:100%;
  height: 100%;
  padding-top: 40rpx;
  background: #349BFF;
  border-top:.5rpx solid #ccc;
}
.login{
  width:80%;
  height: 600rpx;
  border-radius: 25rpx;
  background: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding:40rpx ;
  margin:0 auto;
}
.login image{
  width:250rpx;
  height: 100rpx;
}
.login-input{
  width:100%;
  height: 60rpx;
  border:.5rpx solid #ccc;
  border-radius: 40rpx;
  padding:10rpx 20rpx;
  line-height: 70rpx;
  margin:50rpx 0;
}
.login-input image{
  width:60rpx;
  height: 60rpx;
  float: left;
  margin-right:20rpx;
}
.login-input input{
  width:80%;
  font-size:35rpx;
  color: #ccc;
}
button{
  width:108%;
  background: #349BFF;
  border-radius: 60rpx;
  color: #fff;
  font-size: 35rpx;
}
.agree{
  margin-top: 30rpx;
  font-size: 30rpx;
  color :#ccc;
}
.cont{
  color : #349BFF;
}
